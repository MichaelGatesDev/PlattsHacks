    <label>Officer 4 role:</label>
    <input type="text" name="officer4role" value="<%= organization.officers[3].role%>">
    <label>officer 4 portrait:</label>
    <input type="file" name="officer4picture" accept="image/*">

    <br>
    <br>
    <br>

    <label>Contact 1 type</label>
    <input type="text" name="contact1type" value="<%=organization.contacts[0].type%>">
    <label>Contact 1 URL</label>
    <input type="text" name="contact1url" value="<%=organization.contacts[0].url%>">
    <label>Contact 1 name</label>
    <input type="text" name="contact1name" value="<%=organization.contacts[0].name%>">

    <br>

    <label>Contact 2 type</label>
